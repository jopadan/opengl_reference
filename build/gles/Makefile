# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_linux
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_linux)
  gles_triangle_config = debug_linux
endif
ifeq ($(config),debug_gmake)
  gles_triangle_config = debug_gmake
endif
ifeq ($(config),debug_windows)
  gles_triangle_config = debug_windows
endif
ifeq ($(config),release_linux)
  gles_triangle_config = release_linux
endif
ifeq ($(config),release_gmake)
  gles_triangle_config = release_gmake
endif
ifeq ($(config),release_windows)
  gles_triangle_config = release_windows
endif

PROJECTS := gles_triangle

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

gles_triangle:
ifneq (,$(gles_triangle_config))
	@echo "==== Building gles_triangle ($(gles_triangle_config)) ===="
	@${MAKE} --no-print-directory -C . -f gles_triangle.make config=$(gles_triangle_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f gles_triangle.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_linux"
	@echo "  debug_gmake"
	@echo "  debug_windows"
