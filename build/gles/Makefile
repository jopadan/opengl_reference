	@echo "  release_windows"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   gles_triangle"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"
